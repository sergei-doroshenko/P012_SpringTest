<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- enable bean post processors -->
    <context:annotation-config/>
    <context:component-scan base-package="org.sergei.bean_post_proc" />
    <!-- bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor"/-->
    <!-- no id because it nor for injection -->
    <bean class="org.sergei.quest.inject_rnd_int.InjectRandomIntAnnotationBeanPostProcessor"/>

    <bean class="org.sergei.quest.profiling.ProfingHandlerBeanPostProcessor"/>

    <bean class="org.sergei.quest.context_listener.PostProxyInvokerContextListener"/>

    <bean class="org.sergei.quest.deprecated_class.DeprecationBeanFactoryPostProcessor"/>

    <bean id="terminatorQuoter" class="org.sergei.quest.quoter.TerminatorQuoter">
        <property name="message" value="I'll be back!"/>
    </bean>

    <!--<bean id="T1000" class="org.sergei.deprecated_class.T1000"/>-->
</beans>